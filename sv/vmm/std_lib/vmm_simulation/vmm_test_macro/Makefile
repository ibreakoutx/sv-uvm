OPTS = -ntb_opts rvm

all: clean comp run1 run2

clean:
	rm -rf simv* csrc *.log urg* vc* ucli*

comp: env_pkg.sv tests.sv prog.sv
	vcs -sverilog  $(OPTS) env_pkg.sv tests.sv prog.sv -l comp.log	

run1: comp
	simv -l run1.log +vmm_test=test1

run2: comp
	simv -l run2.log +vmm_test=test2


